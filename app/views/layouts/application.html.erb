<!DOCTYPE html>
<html>
  <head>
    <title>Highpoint</title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
<body>
    <% if signed_in? -%>
      <%= render "donations/new" %>
      <%= render "layouts/navbar" %>
    <% end %>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>

  <%= yield %>
</body>
</html>
