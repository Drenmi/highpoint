<%= form_for(@event) do |f| %>

<div>
  <%= link_to @event do %>
  <i class="fa fa-close fa-lg"></i>
  <% end %>
</div>

<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <div class="form-group">
      <label for="donorDocs" class="control-label">Name</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="donorDocs" class="control-label">NRIC/UEN</label>
      <%= f.text_field :identification, disabled: true, class: "form-control" %>
    </div>
  </div>

  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <div class="form-group">
      <label for="donorDocs" class="control-label">Contact</label>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="donorDocs" class="control-label">Email</label>
      <%= f.email_field :email_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="donorDocs" class="control-label">Address</label>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
</div>

<div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary form-control" %>
  </div>
</div>

<% end %>
